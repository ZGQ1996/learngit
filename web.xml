<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name></display-name>
  <filter>
    <description>字符集过滤器</description>
    <filter-name>encodingFilter</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <async-supported>true</async-supported>
    <init-param>
      <description>字符集编码</description>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <listener>
    <listener-class>com.edu.session.SessionListener</listener-class>
  </listener>
  <listener>
    <description>spring监听器</description>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <listener>
    <listener-class>org.springframework.web.util.IntrospectorCleanupListener</listener-class>
  </listener>
  <listener>
    <listener-class>com.edu.filter.ParamListener</listener-class>
  </listener>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath:spring.xml</param-value>
  </context-param>
  <filter>
    <filter-name>loginFilter</filter-name>
    <filter-class>com.edu.filter.LoginFilter</filter-class>
    <async-supported>true</async-supported>
  </filter>
  <filter-mapping>
    <filter-name>loginFilter</filter-name>
    <url-pattern>*.jsp</url-pattern>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>HomeFilter</filter-name>
    <filter-class>com.edu.filter.HomeFilter</filter-class>
    <async-supported>true</async-supported>
  </filter>
  <filter-mapping>
    <filter-name>HomeFilter</filter-name>
    <url-pattern>/weixin_front/home/*</url-pattern>
    <url-pattern>/weixin_front/student/index.jsp</url-pattern>
    <url-pattern>/weixin_front/get_openid/toHomeworks.jsp</url-pattern>
    <url-pattern>/weixin/fwjz/*</url-pattern>
    <url-pattern>/weixin/xsfcAdd/*</url-pattern>
    <url-pattern>/weixin/slStu/*</url-pattern>
    <url-pattern>/weixin/communityx/*</url-pattern>
    <url-pattern>/weixin/communityxParent/*</url-pattern>    
    <url-pattern>/weixin/stu/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>TeacherFilter</filter-name>
    <filter-class>com.edu.filter.TeacherFilter</filter-class>
    <async-supported>true</async-supported>
  </filter>
  <filter-mapping>
    <filter-name>TeacherFilter</filter-name>
    <url-pattern>/weixin/notice/*</url-pattern>
    <url-pattern>/weixin/repair/*</url-pattern>
    <url-pattern>/weixin/leave_direct/*</url-pattern>
     <url-pattern>/weixin/leave/*</url-pattern>  <!--  -->
    <url-pattern>/weixin/sign/*</url-pattern> <!--  -->
    <url-pattern>/weixin/userSign/*</url-pattern>
    <url-pattern>/weixin/sspAdd/*</url-pattern>
    <url-pattern>/weixin/bjfcAdd/*</url-pattern>
     <url-pattern>/weixin/homeworkAdd/*</url-pattern> <!--  -->
    <url-pattern>/weixin/sl/*</url-pattern>
    <url-pattern>/weixin/img/*</url-pattern>
    <url-pattern>/weixin/message/*</url-pattern>
    <url-pattern>/weixin/singlePage/*</url-pattern>
    <url-pattern>/weixin/honor/*</url-pattern>
     <url-pattern>/weixin/cgyd/*</url-pattern>
    <url-pattern>/weixin/venueRecord/*</url-pattern>
    <url-pattern>/weixin/venueRecords/*</url-pattern>
    <url-pattern>/weixin/tkxx/*</url-pattern>
    <url-pattern>/weixin/discuss/*</url-pattern>
    <url-pattern>/weixin/vrs/*</url-pattern>
    <url-pattern>/weixin/PingFuRong/*</url-pattern>
    <url-pattern>/weixin/PushKaoQing/*</url-pattern>
    <url-pattern>/weixin_front/mall/*</url-pattern>
    <url-pattern>/ weixin/teacherApplyWork/*</url-pattern><!-- 老师加班申请 -->
    
  </filter-mapping>
  <filter>
    <filter-name>XsrxFilter</filter-name>
    <filter-class>com.edu.filter.XsrxFilter</filter-class>
    <async-supported>true</async-supported>
  </filter>
  <filter-mapping>
    <filter-name>XsrxFilter</filter-name>
    <url-pattern>/weixin_front/newstu/*</url-pattern>
    <url-pattern>/weixin_front/vote_openid/*</url-pattern>
    <url-pattern>/weixin_front/get_openid/*</url-pattern>
    <url-pattern>/weixin_front/teacher/visitor_public.jsp</url-pattern>
    <url-pattern>/weixin/public/*</url-pattern>
  </filter-mapping>
  <servlet>
    <description>spring mvc servlet</description>
    <servlet-name>springmvc</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <description>spring mvc servlet</description>
      <param-name>contextConfigLocation</param-name>
      <param-value>classpath:spring-mvc.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
    <async-supported>true</async-supported>
  </servlet>
  <servlet-mapping>
    <servlet-name>springmvc</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>1500</session-timeout>
  </session-config>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>KindEditorUploadJsonServlet.servlet</servlet-name>
    <servlet-class>com.edu.servlet.KindEditorUploadJsonServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>KindEditorUploadJsonServlet.servlet</servlet-name>
    <url-pattern>/KindEditorUploadJsonServlet.servlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>FileManagerJsonServlet.servlet</servlet-name>
    <servlet-class>com.edu.servlet.FileManagerJsonServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>FileUploadServlet.servlet</servlet-name>
    <servlet-class>com.edu.servlet.FileUploadServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FileManagerJsonServlet.servlet</servlet-name>
    <url-pattern>/FileManagerJsonServlet.servlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>FileUploadServlet.servlet</servlet-name>
    <url-pattern>/FileUploadServlet.servlet</url-pattern>
  </servlet-mapping>
  <listener>
    <listener-class>org.directwebremoting.servlet.DwrListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>dwr-invoker</servlet-name>
    <servlet-class>org.directwebremoting.servlet.DwrServlet</servlet-class>
    <init-param>
      <param-name>debug</param-name>
      <param-value>true</param-value>
    </init-param>
    <init-param>
      <param-name>pollAndCometEnabled</param-name>
      <param-value>true</param-value>
    </init-param>
    <init-param>
      <param-name>crossDomainSessionSecurity</param-name>
      <param-value>false</param-value>
    </init-param>
    <init-param>
      <param-name>allowScriptTagRemoting</param-name>
      <param-value>true</param-value>
    </init-param>
    <init-param>
      <param-name>activeReverseAjaxEnabled</param-name>
      <param-value>true</param-value>
    </init-param>
    <init-param>
      <param-name>initApplicationScopeCreatorsAtStartup</param-name>
      <param-value>true</param-value>
    </init-param>
    <init-param>
      <param-name>maxWaitAfterWrite</param-name>
      <param-value>1000</param-value>
    </init-param>
    <init-param>
      <param-name>org.directwebremoting.extend.ScriptSessionManager</param-name>
      <param-value>com.edu.dwr.DwrScriptSessionManagerUtil</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>dwr-invoker</servlet-name>
    <url-pattern>/dwr/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CoreServlet</servlet-name>
    <servlet-class>com.weixin.servlet.CoreServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CoreServlet</servlet-name>
    <url-pattern>/CoreServlet</url-pattern>
  </servlet-mapping>
</web-app>